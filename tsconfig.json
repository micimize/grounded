{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "module": "es2015",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017", "es7", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest",
    "src/setupTests.ts"
  ]
}
